                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/increaseLevelTwoHatches"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/levelOneHatches" />

            <Button
                android:id="@+id/decreaseLevelOneHatches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/holo_red_dark"
                android:minWidth="70dp"
                android:minHeight="40dp"
                android:onClick="decreaseLevelOneHatches"
                android:text="-1"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/decreaseLevelTwoHatches"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/increaseLevelOneHatches" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 2"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/levelTwoHatches"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Level 2"
                android:inputType="number"
                android:minWidth="70dp"
                android:minHeight="40dp"
                android:singleLine="false"
                app:layout_constraintEnd_toStartOf="@+id/levelThreeHatches"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/levelOneHatches"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <Button
                android:id="@+id/increaseLevelTwoHatches"
